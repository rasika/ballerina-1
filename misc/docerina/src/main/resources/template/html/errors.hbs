<!DOCTYPE html>
<html>

{{> head }}
<body class="cBallerina-io">
    {{> bioBody }}
    <div class="navi-wrapper">
        <div class="navi-wrapper-content">
            {{> logo }}
            <div class="primary-list">
                <h3>Errors</h3>
                <ul>
                    {{#each module.errors}}
                        <li {{#equals errors.name name}}class="active"{{/equals}}></li>
                            <a href="#{{name}}">{{name}}</a>
                        </li>
                    {{/each}}
                </ul>
            </div>
            <div class="ui divider"></div>
            {{> currentModule }}
            {{> allModules }}
        </div>
    </div>

    <div class="ui vertical sidebar menu">
        <div class="navi-wrapper-sidebar">
            <div class="navi-wrapper-content">
                {{> logo }}
                <div class="primary-list">
                    <h3>Errors</h3>
                    <ul>
                        {{#each module.errors}}
                            <li {{#equals errors.name name}}class="active"{{/equals}}>
                                <a href="#{{name}}">{{name}}</a>
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="ui divider"></div>
                {{> currentModule }}
                {{> allModules }}
            </div>
        </div>
    </div>

    <div class="content-wrapper pusher">
        {{> mobMenu }}
        <div class="main-wrapper">
            <h1>
                {{> breadcrumb }}
                <span class="title-type">Errors - </span>
                {{#if project.isSingleFile}}
                    {{project.sourceFileName}}
                {{else}}
                    <a href="{{ rootPath }}{{module.id}}/index.html">{{module.id}}</a>
                {{/if}}
            </h1>
            <div class="errors">
                <div class="data-wrapper">
                    {{#each errors}}
                        <div class="params-listing">
                            <ul>
                                <li>
                                    <b {{#if isDeprecated}}class="strike"{{/if}}>{{ name }} </b>
                                    <span class="type">{{#if detailType }}{{{ typeName detailType }}}{{/if}}</span>
                                    {{ attachmentPoints }}
                                </li>
                                <li>
                                    {{#if isDeprecated}}
                                        <span class="stab">Deprecated</span>
                                    {{/if}}
                                    {{{ description }}}
                                </li>
                            </ul>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</body>

{{> footer }}
